<p style="color: green"><%= notice %></p>

<div id="public-tutorials">
<h4>tutorials</h4>
<br>
<div class="container text-center" >
  <div class="row" >

<% @topics.each do |topic| %>
  <% if topic.tutorials.where(status: "public").each.count > 0 %>

  <div id="<%= dom_id topic %>" class="col ">
    <h5><%= topic.title %> </h5>
  <% topic.tutorials.where(status: "public").each do |tutorial| %>
    <%= render "tutorial_small", tutorial: tutorial, topic: topic %>
    <%= link_to "open", tutorial, class:"btn btn-secondary"%>

  <% end %>
  </div>

  <% end %>
<% end %>

</div>
</div>

<div id="tutorials">
  <% if Tutorial.all.where(topic: nil, status: "public").count > 0 %>
    <h5> uncategorized tutorials: </h5>
  <% else %>
  <br>
  <p>
    <small> no tutorials match <strong> uncategorized </strong> and <strong> public </strong>  </small>
  </p>
  <% end %>
  <% @tutorials.where(topic: nil, status: "public").each do |tutorial| %>
    <%= render "tutorial_small", tutorial: tutorial , topic: nil%>
    <p>
      <%= link_to "open", tutorial, class:"btn btn-secondary"%>
    </p>
  <% end %>
</div>

</div>

<div id="tutorial-archive">
<h4>archive</h4>
<br>

<div class="container text-center" >
  <div class="row" >

<% @topics.each do |topic| %>
  <div id="<%= dom_id topic %>" class="col ">
    <% if topic.tutorials.where.not(status: "public").each.count > 0 %>
    <h5><%= topic.title %> </h5>
  <% topic.tutorials.where.not(status: "public").each do |tutorial| %>
    <%= render "tutorial_tiny", tutorial: tutorial %>
    <% end %>
  <% end %>
  </div>
<% end %>
</div>
</div>

  <% if Tutorial.all.where(topic: nil).where.not(status: "public").count > 0 %>
  <small> uncategorized </small>
  <hr>
  <div id="uncategorized-tutorials">
    <% @tutorials.where(topic: nil).where.not(status:"public").each do |tutorial| %>
      <%= render "tutorial_tiny", tutorial: tutorial %>

    <% end %>
  </div>
  <% end %>

</div>
